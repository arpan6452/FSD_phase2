<persistence-unit name="flyaway">
    <description>Hibernate EntityManager Demo</description>
    <class>flyaway.model.Flight.java</class> 
    <class>flyaway.model.FlightTravelDetails.java</class> 
    <class>flyaway.model.Role.java</class> 
    <class>flyaway.model.User.java</class> 
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/flyaway"/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.password" value="arpan@mySQL12"/>
    </properties>
</persistence-unit>